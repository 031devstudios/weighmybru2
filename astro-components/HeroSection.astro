---
// HeroSection.astro - Hero section for homepage matching your theme
export interface Props {
  title?: string;
  subtitle?: string;
  showCTAs?: boolean;
}

const { 
  title = "WeighMyBruÂ²", 
  subtitle = "Open-source smart coffee scale firmware",
  showCTAs = true 
} = Astro.props;
---

<div class="bg-gradient-to-r from-black-discord to-black-background py-20 md:py-32">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
      {title}
    </h1>
    
    <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
      {subtitle}
    </p>
    
    {showCTAs && (
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/flash" 
          class="flash-button text-white font-bold py-4 px-8 rounded-lg text-lg inline-flex items-center"
        >
          <i class="fa fa-microchip mr-2"></i>
          Flash Firmware
        </a>
        
        <a 
          href="https://github.com/031devstudios/weighmybru2" 
          target="_blank"
          rel="noopener noreferrer"
          class="bg-transparent border-2 border-gray-600 text-white font-bold py-4 px-8 rounded-lg text-lg hover:bg-gray-600 transition-colors inline-flex items-center"
        >
          <i class="fa fa-github mr-2"></i>
          View on GitHub
        </a>
        
        <a 
          href="https://discord.gg/HYp4TSEjSf" 
          target="_blank"
          rel="noopener noreferrer"
          class="bg-transparent border-2 border-gray-600 text-white font-bold py-4 px-8 rounded-lg text-lg hover:bg-gray-600 transition-colors inline-flex items-center"
        >
          <i class="fab fa-discord mr-2"></i>
          Join Discord
        </a>
      </div>
    )}
    
    <!-- Stats Section -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      <div class="bg-black-select rounded-lg p-6 border border-gray-700">
        <div class="text-3xl font-bold text-green-600 mb-2">
          <i class="fa fa-code mr-2"></i>
          100%
        </div>
        <div class="text-gray-300">Open Source</div>
      </div>
      
      <div class="bg-black-select rounded-lg p-6 border border-gray-700">
        <div class="text-3xl font-bold text-green-600 mb-2">
          <i class="fa fa-microchip mr-2"></i>
          2
        </div>
        <div class="text-gray-300">Board Variants</div>
      </div>
      
      <div class="bg-black-select rounded-lg p-6 border border-gray-700">
        <div class="text-3xl font-bold text-green-600 mb-2">
          <i class="fa fa-users mr-2"></i>
          <span id="github-stars">1k+</span>
        </div>
        <div class="text-gray-300">Community Members</div>
      </div>
    </div>
  </div>
</div>

<script>
  // Fetch GitHub stats
  async function updateGitHubStats() {
    try {
      const response = await fetch('https://api.github.com/repos/031devstudios/weighmybru2');
      const repo = await response.json();
      const starsEl = document.getElementById('github-stars');
      
      if (starsEl && repo.stargazers_count) {
        const stars = repo.stargazers_count;
        if (stars >= 1000) {
          starsEl.textContent = `${Math.round(stars / 100) / 10}k`;
        } else {
          starsEl.textContent = stars.toString();
        }
      }
    } catch (error) {
      console.error('Failed to fetch GitHub stats:', error);
    }
  }
  
  updateGitHubStats();
</script>