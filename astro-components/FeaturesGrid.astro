---
// FeaturesGrid.astro - Features section matching your theme
export interface Props {
  title?: string;
  features?: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { 
  title = "Why WeighMyBru²?",
  features = [
    {
      icon: "fa-wifi",
      title: "WiFi Enabled",
      description: "Connect to your home network and monitor your brewing sessions remotely through a web interface."
    },
    {
      icon: "fa-balance-scale",
      title: "Precision Weighing",
      description: "High-precision load cell support with real-time weight measurements and tare functionality."
    },
    {
      icon: "fa-chart-line",
      title: "Flow Rate Tracking",
      description: "Monitor pour rate and brewing patterns with real-time graphing and flow analysis."
    },
    {
      icon: "fa-cogs",
      title: "Fully Customizable",
      description: "Open-source firmware with configurable settings for units, calibration, and brewing parameters."
    },
    {
      icon: "fa-mobile-alt",
      title: "Mobile Friendly",
      description: "Responsive web interface that works perfectly on phones, tablets, and desktop computers."
    },
    {
      icon: "fa-users",
      title: "Active Community",
      description: "Join our Discord community for support, feature requests, and sharing brewing techniques."
    }
  ]
} = Astro.props;
---

<div class="py-20 bg-black-background">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-white mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Built by coffee enthusiasts, for coffee enthusiasts. WeighMyBru² brings professional-grade
        brewing precision to your home setup.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-black-select rounded-xl p-8 border border-gray-700 hover:border-green-600 transition-colors group">
          <div class="text-4xl text-green-600 mb-4 group-hover:scale-110 transition-transform">
            <i class={`fa ${feature.icon}`}></i>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">
            {feature.title}
          </h3>
          <p class="text-gray-400 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</div>